<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activated"
    >

    <TextView
        android:id="@+id/row_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/defaultAmount"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />



    <TextView
        android:id="@+id/row_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/row_author"
        android:layout_marginStart="240dp"
        android:layout_marginTop="23dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/row_method"
        android:layout_alignTop="@+id/row_author"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/row_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/row_author"
        android:layout_below="@+id/imgDelete"
        android:text="@string/defaultAmount"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>